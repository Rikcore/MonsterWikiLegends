<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_visualiser_monstres"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fond"
    tools:context="wildentertainmentsas.monsterwikilegends.VisualiserMonstres">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewStamina"
        android:layout_toRightOf="@+id/imageViewLife"
        android:layout_toEndOf="@+id/imageViewLife"
        android:id="@+id/textViewStamina" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewPower"
        android:layout_alignLeft="@+id/textViewStamina"
        android:layout_alignStart="@+id/textViewStamina"
        android:id="@+id/textViewPower" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/retour"
        android:textColor="#0D2409"
        android:textSize="20sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/retour"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSpeed"
        android:layout_alignBottom="@+id/imageViewSpeed"
        android:layout_alignLeft="@+id/retour"
        android:layout_alignStart="@+id/retour" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageViewStamina"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageViewElement" />

    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/imageViewMonster"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stat_speed"
        android:id="@+id/imageViewSpeed"
        android:layout_above="@+id/retour"
        android:layout_alignLeft="@+id/imageViewPower"
        android:layout_alignStart="@+id/imageViewPower"
        android:layout_marginBottom="23dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stat_power"
        android:id="@+id/imageViewPower"
        android:layout_above="@+id/imageViewSpeed"
        android:layout_alignLeft="@+id/imageViewStamina"
        android:layout_alignStart="@+id/imageViewStamina" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stat_stamina"
        android:id="@+id/imageViewStamina"
        android:layout_above="@+id/textViewPower"
        android:layout_alignLeft="@+id/imageViewLife"
        android:layout_alignStart="@+id/imageViewLife"
        android:layout_marginBottom="17dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stat_life"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/imageViewLife"
        android:layout_above="@+id/imageViewStamina"
        android:layout_toLeftOf="@+id/textViewSpeed"
        android:layout_toStartOf="@+id/textViewSpeed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLife"
        android:layout_above="@+id/imageViewStamina"
        android:layout_alignLeft="@+id/textViewStamina"
        android:layout_alignStart="@+id/textViewStamina" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNomOriginal"
        android:layout_below="@+id/imageViewMonster"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
